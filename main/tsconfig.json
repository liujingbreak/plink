{
  "extends": "./wfh/tsconfig-base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "rootDirs": ["wfh/ts", "wfh/share"],
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "wfh/types",
      "../node_modules/@types"
    ],
    "paths": {
      "@wfh/redux-toolkit-observable": [
        "packages/redux-toolkit-observable"
      ],
      "@wfh/redux-toolkit-observable/dist/*": [
        "packages/redux-toolkit-observable/*"
      ],
      "@wfh/redux-toolkit-observable/*": [
        "packages/redux-toolkit-observable/*"
      ],
      "@wfh/thread-promise-pool": [
        "packages/thread-promise-pool"
      ],
      "@wfh/thread-promise-pool/dist/*": [
        "packages/thread-promise-pool/ts/*"
      ],
      "@wfh/thread-promise-pool/*": [
        "packages/thread-promise-pool/*"
      ],
      "@wfh/reactive-terminal-ui": [
        "packages/reactive-terminal-ui"
      ],
      "@wfh/reactive-terminal-ui/dist/*": [
        "packages/reactive-terminal-ui/src/*"
      ]
    }
  },
  "include": [
    "wfh/ts/**/*.ts",
    "packages/redux-toolkit-observable/**/*.ts",
    "packages/thread-promise-pool/ts/**/*.ts",
    "packages/reactive-terminal-ui/src/**/*.ts",
    "packages/reactivizer/src/**/*.ts",
    "packages/reactivizer/__tests__/**/*.ts",
    "wfh/share/**/*.ts"
  ],
  "exclude": [
    "packages/**/*.d.ts"
  ]
}

{
	"extends": "./wfh/tsconfig-base.json",
	"compilerOptions": {
    "rootDir": ".",
    "target": "ES2017",
    "module": "ESNext",
    "outDir": "es",
    "declaration": true,
    "strict": true,
    "composite": true,
    "sourceMap": false,
		"inlineSourceMap": false,
		"inlineSources": false
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "es/**/*",
    "dist/**/*",
    "example/**/*.ts",
    "template/**/*.ts"
  ]
}

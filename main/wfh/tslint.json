{
	"extends": [
		"tslint:recommended", "tslint-eslint-rules"
	],
	"rules": {
		"array-type": false,
		"max-classes-per-file": false,
		"jsdoc-format": false,
		"no-consecutive-blank-lines": false,
		"object-literal-shorthand": true,
		"prefer-const": true,
		"interface-name": false,
		"ordered-imports": false,
		"no-var-requires": false,
		"trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
		"object-literal-sort-keys": false,
		"member-access": [true, "no-public"],
		"no-bitwise": false,
		"triple-equals": [true, "allow-null-check"],
		"forin": true,
		"no-namespace": false,
		"no-reference": false,
		"no-use-before-declare": false,
		"no-arg": true,
		"no-constant-condition": false,
		"quotemark": [true, "single", "avoid-template"],
		"align": false,
		"no-var-keyword": false,
		"no-extra-semi": true,
		"semicolon": [true, "always"],
		"no-console": [true, "log"],
		"no-conditional-assignment": false,
		"no-debugger": true,
		"no-eval": true,
		"no-unused-expression": [true, "allow-fast-null-checks"],
		"linebreak-style": [true, "LF"],
		"no-shadowed-variable": false,
		"no-construct": false,
		"no-invalid-this": false,
		"no-empty": false,
		"arrow-parens": false,
		"brace-style": [
			true,
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"indent": [true, "spaces", 2],
		"dot-location": [
			2,
			"property"
		],
		"operator-linebreak": [
			2,
			"after"
		],
		"padded-blocks": [
			2,
			"never"
		],
		"object-literal-key-quotes": [
			true,
			"as-needed"
		],
		"space-before-function-paren": [true,
			{
				"anonymous": "never",
				"named": "never",
				"constructor": "never",
				"method": "never"
			}
		],
		"array-bracket-spacing": [
			true, "never", {
				"arraysInArrays": true
			}
		],
		"no-trailing-whitespace": [true, "ignore-jsdoc", "ignore-template-strings", "ignore-comments"],
		"whitespace": true,
		"variable-name": false,
		"curly": [false, "ignore-same-line"],
		"only-arrow-functions": false,
		"eofline": true,
		"one-variable-per-declaration": [false, "ignore-for-loop"],
		"keyword-spacing": [
			2,
			{
				"overrides": {
					"else": {
						"before": true
					},
					"while": {
						"before": true
					},
					"catch": {
						"before": true
					}
				}
			}
		],
		"ter-indent": [
			true,
			2,
			{
				"SwitchCase": 1,
				"MemberExpression": "off"
			}
		],
		"switch-default": true,
		"no-unsafe-finally": true,
		"no-string-throw": true,
		"no-duplicate-super": true
	}
}
